<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Задачи</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
    <h1 class="mb-4">Список задач</h1>
    
    <form action="/add" method="POST" class="mb-3">
        <div class="input-group">
            <input type="text" name="title" class="form-control" placeholder="Название задачи" required>
            <input type="text" name="author" class="form-control" placeholder="Автор" required>
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>
    
    <ul class="list-group">
        <% tasks.forEach(task => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <form action="/toggle/<%= task._id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm <%= task.completed ? 'btn-success' : 'btn-outline-secondary' %>">
                            <%= task.completed ? '✔' : '○' %>
                        </button>
                    </form>
                    <strong><%= task.title %></strong> (Автор: <%= task.author %>)
                    <small class="text-muted">— <%= new Date(task.createdAt).toLocaleDateString() %></small>
                </div>
                <form action="/delete/<%= task._id %>" method="POST">
                    <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
